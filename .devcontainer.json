{
    "image": "mcr.microsoft.com/devcontainers/typescript-node:0-20",
    "postCreateCommand": "yarn",
    "postAttachCommand": "yarn dev --port 3080",
    "forwardPorts": [
        3080
    ],
    "portsAttributes": {
        "3080": {
            "label": "Application",
            "onAutoForward": "ignore"       
        }
    },
    "customizations": {
        "vscode": {
            "extensions": [
                "arcanis.vscode-zipfs"
            ],
            "settings": {
                "workbench.colorTheme": "Abyss"
            }
        }
    }
}
