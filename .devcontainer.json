{
    "image": "mcr.microsoft.com/devcontainers/typescript-node:0-20",
    "postCreateCommand": "yarn",
    "postAttachCommand": "yarn dev",
    "forwardPorts": [
        3080
    ],
    "portsAttributes": {
        "3080": {
            "label": "Application",
            "onAutoForward": "ignore"            
        }
    },
    "customizations": {
        "vscode": {
            "extensions": [
                "arcanis.vscode-zipfs"
            ]
        }
    }
}
